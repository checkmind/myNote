.userinfo{display:flex;flex-direction:column;align-items:center}.userinfo-avatar{width:80rpx;height:80rpx;border-radius:50%}.userinfo-nickname{color:#aaa}
  view {
    display:block;
    width:100%;
    height:50px;
    line-height:50px;
    text-align:center;
    border-bottom:1px solid red;
  }
  .container-son {
    z-index:2;
    position:relative;
    background:white;
    height:auto;
  }
  .loading {
    width:40px;
    height:40px;
    border:1px solid black;
    animation:loadings 1s linear infinite both;
    position:fixed;
    bottom:0;
    left:50%;
    margin-left:-20px;
    z-index:1;
    border-radius:50%;
    border-bottom:1px solid red;
  }
  @keyframes loadings
  {
  from { transform:rotate(0deg); }
  to {transform:rotate(360deg);}
  }
